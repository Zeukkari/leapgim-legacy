#!/bin/bash

if [ "$1" == "start" ]; then
	forever list | grep leapgim.js || forever start leapgim.js
elif [ "$1" == "status" ]; then
	if ( forever list | grep leapgim.js ); then
		echo "Leap control is running"
	else
		echo "Leap control is not running"
	fi
elif [ "$1" == "toggle" ]; then
	if ( forever list | grep leapgim.js ); then
		forever stop leapgim.js
	else
		forever start leapgim.js
	fi
elif [ "$1" == "stop" ]; then
	forever list | grep leapgim.js && forever stop leapgim.js
elif [ "$1" == "media-config" ]; then
	if ( forever list | grep leapgim.js ); then
		node leapctl.js reconfigure media-config.json
	fi
elif [ "$1" == "mouse-config" ]; then
	if ( forever list | grep leapgim.js ); then
		node leapctl.js reconfigure mouse-config.json
	fi
fi